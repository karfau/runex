{
  "extends": [
    "config:js-lib",
    ":pinAllExceptPeerDependencies",
    ":separateMultipleMajorReleases",
    ":combinePatchMinorReleases",
    ":rebaseStalePrs",
    ":unpublishSafe",
    ":automergePatch"
  ],
  "bumpVersion": "patch",
  "prConcurrentLimit": 1,
  "packageRules": [
    {
      "packageNames": ["node"],
      "rangeStrategy": "replace"
    },
    {
      "depTypeList": ["devDependencies"],
      "updateTypes": ["patch"],
      "automergeType": "branch",
      "automerge": true
    }
  ]
}
